{
  "name": "render-deploy",
  "version": "0.1.2",
  "private": true,
  "description": "GitHub Action for deploying a Render app",
  "keywords": [
    "actions",
    "node",
    "setup",
    "render",
    "deploy"
  ],
  "homepage": "https://github.com/halfdomelabs/render-deploy",
  "bugs": {
    "url": "https://github.com/halfdomelabs/render-deploy/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/halfdomelabs/render-deploy.git"
  },
  "license": "MIT",
  "author": "Half Dome Labs LLC",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "bundle": "pnpm prettier:write && pnpm package",
    "lint": "eslint .",
    "package": "ncc build src/index.ts --license licenses.txt",
    "package:watch": "pnpm package -- --watch",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier -w .",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@actions/core": "1.11.1",
    "@actions/http-client": "2.2.3"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.7",
    "@ktam/lint-node": "0.5.1",
    "@tsconfig/node24": "^24.0.1",
    "@types/node": "24.6.2",
    "@vercel/ncc": "0.38.4",
    "eslint": "9.36.0",
    "prettier": "3.6.2",
    "tsx": "^4.20.6",
    "typescript": "5.8.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": ">=24"
  },
  "volta": {
    "node": "24.9.0"
  }
}
